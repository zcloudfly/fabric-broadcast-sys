<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.broadcast.app.dao.UserDao">

    <resultMap type="com.broadcast.app.entity.User" id="UserMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="acct" column="acct" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="ctime" column="ctime" jdbcType="TIMESTAMP"/>
        <result property="sts" column="sts" jdbcType="VARCHAR"/>
        <result property="pwd" column="pwd" jdbcType="VARCHAR"/>
        <result property="orgid" column="orgid" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserMap">
        select id,
               acct,
               name,
               ctime,
               sts,
               pwd
        from fbsys.user
        where id = #{id}
    </select>
    <select id="queryByPwdAndName" resultMap="UserMap">
        select id,
               acct,
               name,
               ctime,
               sts,
               pwd,
               orgid
        from fbsys.user
        where name = #{name} and pwd=#{pwd}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserMap">
        select id,
               acct,
               name,
               ctime,
               sts,
               pwd
        from fbsys.user limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserMap">
        select
        id, acct, name, ctime, sts, pwd
        from fbsys.user
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="acct != null and acct != ''">
                and acct = #{acct}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="ctime != null">
                and ctime = #{ctime}
            </if>
            <if test="sts != null and sts != ''">
                and sts = #{sts}
            </if>
            <if test="pwd != null and pwd != ''">
                and pwd = #{pwd}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into fbsys.user(acct, name, ctime, sts, pwd)
        values (#{acct}, #{name}, #{ctime}, #{sts}, #{pwd})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into fbsys.user(acct, name, ctime, sts, pwd)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.acct}, #{entity.name}, #{entity.ctime}, #{entity.sts}, #{entity.pwd})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into fbsys.user(acct, name, ctime, sts, pwd)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.acct}, #{entity.name}, #{entity.ctime}, #{entity.sts}, #{entity.pwd})
        </foreach>
        on duplicate key update
        acct = values(acct) , name = values(name) , ctime = values(ctime) , sts = values(sts) , pwd = values(pwd)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update fbsys.user
        <set>
            <if test="acct != null and acct != ''">
                acct = #{acct},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="ctime != null">
                ctime = #{ctime},
            </if>
            <if test="sts != null and sts != ''">
                sts = #{sts},
            </if>
            <if test="pwd != null and pwd != ''">
                pwd = #{pwd},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from fbsys.user
        where id = #{id}
    </delete>

</mapper>